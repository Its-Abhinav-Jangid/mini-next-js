{
  "name": "basic-server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
 "scripts": {
  "start": "node index.js",

  "dev": "nodemon --exec \"npm run build && node index.js\"",

  "test": "vitest --run",


  "build:pages-index": "node generate-pages-index.js",
  "build:client": "npm run build:pages-index && npx esbuild frontend/static/scripts/client.js --bundle --loader:.js=jsx --outdir=.previous/static/scripts --format=esm --platform=browser --target=esnext --minify",
  "build:ssr": "npx esbuild frontend/pages/*.jsx --loader:.js=jsx --outdir=.previous/pages --format=esm --platform=node --target=esnext --minify --bundle --external:react --external:react-dom",
  "build": "npm run build:ssr && npm run build:client",
  "build:client-entry": "npx esbuild frontend/static/scripts/client.js --bundle --outdir=.previous/static/scripts --format=esm --platform=browser --target=esnext --splitting --minify"
},

  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@esbuild-kit/esm-loader": "^2.6.5",
    "fs": "^0.0.1-security",
    "http": "^0.0.1-security",
    "path": "^0.12.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "esbuild-register": "^3.6.0",
    "vitest": "^3.2.4"
  },
  "exports": {
    "@": "./"
  }
}
